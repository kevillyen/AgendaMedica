@page
@model RegisterModel
@{
    Layout = null;
}

<link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
<link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
<link rel="stylesheet" href="~/AgendaMedica.styles.css" asp-append-version="true" />

<!-- ================== ESTILO ================== -->
<style>
    body {
        background: linear-gradient(to right, #dfe9f3, #ffffff);
        font-family: 'Inter', sans-serif;
        height: 100vh;
        display: flex;
        align-items: center;
        justify-content: center;
    }

    .login-container {
        display: flex;
        background-color: #fff;
        border-radius: 16px;
        box-shadow: 0 10px 30px rgba(0,0,0,0.1);
        overflow: hidden;
        width: 900px;
        max-width: 95%;
    }

    .left-panel {
        flex: 1;
        background: linear-gradient(to bottom right, #e0f0ff, #ffffff);
        padding: 60px 40px;
        display: flex;
        flex-direction: column;
        justify-content: center;
    }

    .right-panel {
        flex: 1;
        padding: 60px 50px;
    }

    .form-control {
        border-radius: 10px;
        padding: 12px;
    }

    .btn-primary {
        background-color: #007bff;
        border: none;
        border-radius: 10px;
        padding: 12px;
        font-weight: 600;
    }

    .btn-outline {
        border-radius: 10px;
    }

    .text-muted a {
        text-decoration: none;
        color: #007bff;
}

.text-muted a:hover {
  text-decoration: underline;
}
</style>
<body>
<!-- ================== CONTEÚDO ================== -->
<div class="login-container">

    <!-- Lado Esquerdo -->
    <div class="left-panel text-start">
        <h2 class="fw-bold">Rapido, Eficiente e Produtivo</h2>
            <p class="text-muted">“A forma mais simples e eficiente de gerenciar sua rotina médica.”</p>

        <div class="mt-auto">
                
                <span> Portuguese 🇧🇷</span>
        </div>

        <div class="mt-3 small">
            <a href="#">Termos</a> ·
            <a href="#">Planos</a> ·
            <a href="#">Contato</a>
        </div>
    </div>

    <!-- Lado Direito -->
    <div class="right-panel">
        <h3>Entrar</h3>
            <p class="text-muted">Bem vindo(a) de volta! Por favor, insira suas credenciais.</p>

        <form id="account" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger mb-3" role="alert"></div>

            <div class="mb-3">
                <label asp-for="Input.Email" class="form-label">Email</label>
                <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" placeholder="name@example.com" />
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Input.Password" class="form-label">Senha</label>
                <input asp-for="Input.Password" class="form-control" autocomplete="current-password" aria-required="true" placeholder="password" />
                <span asp-validation-for="Input.Password" class="text-danger"></span>
            </div>

            

            <button id="login-submit" type="submit" class="btn btn-primary w-100 mb-3">Entrar</button>

            <div class="text-center text-muted mb-3">Ou entre com</div>

            <div class="d-flex gap-2 mb-3">
                <button type="button" class="btn btn-outline-secondary w-50">
                    <img src="https://www.svgrepo.com/show/355037/google.svg" width="20" class="me-2" />
                    Google
                </button>
                <button type="button" class="btn btn-outline-secondary w-50">
                    <img src="~/images/logoapple.svg" width="20" class="me-2" />
                    Apple
                </button>
            </div>

            <div class="text-center text-muted">
                <a id="forgot-password" asp-page="./ForgotPassword">Esqueceu sua senha?</a> <br />
                <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">Criar uma nova conta</a> <br />
                <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">Reenviar email de configuração</a>
            </div>
        </form>
    </div>
</div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @* @await RenderSectionAsync("Scripts", required: false) *@
</body>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

